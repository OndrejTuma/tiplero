<div class="slide" style="background-image: url({{ slide.img }})">
    {% if slide.logo is defined %}
        <span class="slide__logo">
            <img src="{{ slide.logo }}" alt="{{ slide.title }}">
        </span>
    {% endif %}
    {% if slide.title is defined %}
        <h3>{{ slide.title }}</h3>
    {% endif %}
    {% if slide.text is defined %}
        <p>{{ slide.text }}</p>
    {% endif %}
    {#
    {% include "buttons/button.twig" with {url: slide.url, label: 'Získat peníze zpět', white: true} only %}
    #}
    <a href="{{ slide.url }}" class="slide__link"></a>
</div>